<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.muhammadatif.datepicker.dateexample.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.844"
        app:layout_constraintHorizontal_bias="0.47" />
    


    
    <Button
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/allDates"
        android:id="@+id/dateBtn"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:id="@+id/dateMonth"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dateBtn"
        app:layout_constraintVertical_bias="0.734"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.47" />

    <TextView
        android:id="@+id/ninetyDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="90"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="383dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintVertical_bias="0.815" />

    <Button
        android:id="@+id/allDateBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/selectSpecificDate"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dateBtn"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.651" />



    <LinearLayout
        android:id="@+id/ll_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.228"
        android:weightSum="1"
        android:layout_marginEnd="8dp">

        <com.muhammadatif.datepicker.dateexample.widgets.TextViewNormal
            android:id="@+id/clickView"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="@string/selectDate"
            android:padding="5dp"
            android:textColor="@color/text_gray"
            android:layout_weight="0.24" />

        <com.muhammadatif.datepicker.dateexample.widgets.TextViewNormal
            android:id="@+id/tvDateOne"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/icon_calenderfrom"
            android:gravity="center_vertical"
            android:text="08 FEB 2016"
            android:padding="5dp"
            android:textColor="@color/text_gray"
            android:layout_weight="0.24" />
        <com.muhammadatif.datepicker.dateexample.widgets.TextViewNormal
            android:id="@+id/tvDateTwo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/icon_calendertill"
            android:gravity="center_vertical"
            android:text="08 FEB 2016"
            android:textColor="@color/text_gray"
            tools:layout_editor_absoluteY="152dp"
            android:layout_marginLeft="8dp"
            android:padding="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />


        <com.muhammadatif.datepicker.dateexample.widgets.TextViewNormal
            android:id="@+id/timeViewer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/icon_time"
            android:gravity="center_vertical"
            android:text="08 Hrs"
            android:textColor="@color/text_gray"
            tools:layout_editor_absoluteY="152dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />


    </LinearLayout>







</android.support.constraint.ConstraintLayout>
